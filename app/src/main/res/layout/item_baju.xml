<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="187dp"
    android:layout_height="258dp"
    android:background="@drawable/item_stroke"
    android:paddingHorizontal="20dp">

    <FrameLayout
        android:id="@+id/frame_item"
        android:layout_width="match_parent"
        android:layout_height="192dp"
        android:orientation="vertical"
        android:paddingTop="20dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_item_baju"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/raincoat_red" />

    </FrameLayout>

    <TextView
        android:id="@+id/tv_tanggal"
        style="@style/poppinsReguler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:text="2/15/99 08:09:10"
        app:layout_constraintStart_toStartOf="@id/frame_item"
        app:layout_constraintTop_toBottomOf="@id/frame_item" />

    <ImageView
        android:id="@+id/btn_trash"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_trash"
        app:layout_constraintBottom_toBottomOf="@id/tv_tanggal"
        app:layout_constraintEnd_toEndOf="@id/frame_item"
        app:layout_constraintTop_toTopOf="@id/tv_tanggal" />


</androidx.constraintlayout.widget.ConstraintLayout>