<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="spartanSmall">
        <item name="android:fontFamily">@font/league_spartan_reguler</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.3</item>
    </style>

    <style name="spartanReguler">
        <item name="android:fontFamily">@font/league_spartan_reguler</item>
        <item name="android:textSize">20sp</item>
        <item name="android:letterSpacing">0.3</item>
    </style>

    <style name="poppinsMedium">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">20sp</item>
        <item name="android:letterSpacing">0.3</item>
    </style>

    <style name="poppinsReguler">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="regPoppinsProf">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/primaryColor</item>

    </style>

    <style name="regPoppinsTutor">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/primaryColor</item>
    </style>

    <style name="lightPoppinsTutor">
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/primaryColor</item>

    </style>

    <style name="switchColorCustom" parent="Theme.AppCompat.Light">
        <!--       active-->
        <item name="colorControlActivated">@color/primaryColor</item>
        <!--        inactive-->
        <item name="colorSwitchThumbNormal">@color/white</item>
        <!--      transition-->
        <item name="android:colorForeground">#42221f1f</item>
    </style>



</resources>